<div class="container">
    <div class="row">
        <div class="col mx-auto">
            <div class="text-center my-4">
                <h3>Operadores Activos</h3>
            </div>
            <div class="my-2">
                <a href="/home" class="btn btn-outline-info">Inicio</a>
            </div>
            <div class="my-2">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Nombre</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each operadoresActivos}}
                        <tr>
                            <td><a href="/operadores/editarOperador/{{idOperador}}">{{codigoOperador}}</a></td>
                            <td>{{nombreOperador}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>


        </div>
    </div>
</div>