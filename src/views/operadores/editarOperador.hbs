<div class="container p-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Editar Operador</h3>
                </div>
                <div class="card-body">
                    <form action="/operadores/editarOperador/{{operador.idOperador}}" method="POST">
                        <div class="form-group py-2 my-2"> {{!-- nombreOperador --}}
                            <label for="nombreOperador">Nombre Completo</label>
                            <input type="text" id="nombreOperador" name="nombreOperador" placeholder="Nombre del operador"
                                class="form-control"
                                value="{{operador.nombreOperador}}" autofocus>
                        </div>

                        <div class="form-group py-2 my-2"> {{!-- codigoOperador --}}
                            <label for="codigoOperador">Codigo del operador</label>
                            <input type="text" name="codigoOperador" placeholder="Codigo del operador"
                                class="form-control" 
                                value="{{operador.codigoOperador}}">
                        </div>

                        <div class="form-group py-2 my-2"> {{!-- estadoOperador --}}
                            <label for="estadoOperador">Estado</label>
                            <select id="estadoOperador" name="estadoOperador" class="form-control">
                                <option value="Activo" selected>Activo</option>
                                <option value="Inactivo">Inactivo</option>
                            </select>
                        </div>

                        <div class="form-group py-2 my-2 text-center"> {{!-- Guardar --}}
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>