<div class="container">
    <div class="row">{{!-- Menu rutas --}}
        <div class="col">
            <div class="d-flex">
                <a href="/home">Home</a>
                <p> &nbsp; / &nbsp;</p>
                <a href="/home/usuarios">Usuarios</a>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div>
                <h4>Usuarios del sistema</h4>
            </div>
            <div class="my-2">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Nombre Completo</th>
                            <th>Usuario</th>
                            <th>Perfil</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                        <tr>
                            <td><a href="/usuarios/editarUsuario/{{idUsuario}}">{{fullname}}</a></td>
                            <td>{{username}}</td>
                            <td>{{perfilUsuario}}</td>
                            <td><a href="/usuarios/editarUsuario/{{idUsuario}}">Editar</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
