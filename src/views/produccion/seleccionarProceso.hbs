<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="text-center my-4">
                <h3>{{operador.nombreOperador}}</h3>
            </div>
            <div class=" my-2">
                <p><strong>Orden de Produccion</strong></p>
                <p>Consecutivo: <strong>{{ordenProduccion.consecutivo}}</strong></p>
                <p>Nombre: <strong>{{ordenProduccion.nombreOP}}</strong></p>
            </div>
            <div class="my-2">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Proceso</th>
                            <th>Cantidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each procesosParaIniciar}}
                        <tr>
                            <td>{{nombreProceso}}</td>
                            <td>{{cantidad}}</td>
                            <td>
                                <form action="/produccion/seleccionarProceso" method="post">
                                    <input type="hidden" name="idOperador" value="{{operador.idOperador}}">
                                    <input type="hidden" name="idProduccion" value="{{idProduccion}}">
                                    <input type="hidden" name="cantidad" value="{{cantidad}}">
                                    <button type="submit" class="btn btn-primary">Iniciar</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>   
            </div>
        </div>
    </div>
</div>