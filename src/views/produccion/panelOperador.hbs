<div class="container">
    <div class="row">
        <div class="col">
            <div class="my-2"> {{!-- botones superiores --}}
                <a href="/produccion/inicio" class="btn btn-danger">Salir</a>
            </div>
            <div class="text-center my-4"> {{!-- nombreOperador --}}
                <h3>{{operador.nombreOperador}}</h3>
            </div>

            <div class="my-2"> 
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Orden Produccion</th>
                            <th>Proceso</th>
                            <th>Cantidad</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each produccionEnProceso}}
                        <tr>
                            <td>{{consecutivo}}</td>
                            <td>{{nombreProceso}}</td>
                            <td>{{cantidad}}</td>
                            <td>
                                <a href="/produccion/confirmarFinalizacion/{{idProduccion}}" class="btn btn-primary">Terminar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            
        </div>
    </div>
</div>