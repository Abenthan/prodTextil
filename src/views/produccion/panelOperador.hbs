<div class="container">
    <div class="row d-flex align-content-between flex-wrap my-1">{{!-- Menu rutas --}}

        <div class="col d-flex justify-content-end"> {{!-- Botones --}}
            <a href="/produccion/inicio" class="btn btn-danger">Salir&nbsp;<i class="fa-solid fa-right-from-bracket"></i></a>

        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="text-center"> {{!-- nombreOperador --}}
                <h3>{{operador.nombreOperador}}</h3>
            </div>
            <div class="text-center">
                <a href="/produccion/buscarOP" class="btn btn-primary"><i class="fa-solid fa-plus"></i>&nbsp;Iniciar Proceso</a>
            </div>

            <div>
                <div>
                    <p class="h4">Procesos Iniciados</p>
                </div>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Orden Produccion</th>
                            <th>Proceso</th>
                            <th>Cantidad Iniciada</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each produccionEnProceso}}
                        <tr>
                            <td>{{consecutivo}}</td>
                            <td>{{nombreProceso}}</td>
                            <td>{{cantidadIN}}&nbsp;{{medidaIN}}</td>
                            <td>
                                <a href="/produccion/confirmarFinalizacion/{{idProduccion}}" class="btn btn-outline-primary">Terminar</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            
        </div>
    </div>
</div>