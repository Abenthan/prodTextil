<div class="container">
    <div class="row">
        <div class="col mx-auto">
            <div class="mt-2"> {{!-- botones superiores --}}
                <a href="/produccion/inicio" class="btn btn-danger">Salir</a>
            </div>
            <div class="text-center">
                <h3>Confirmar Produccion</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title text-center">{{operador.nombreOperador}}</h5>
                </div>
                <div class="card-body">
                    <form action="/produccion/confirmarProduccion" method="post">
                        <div class="form-group py-2 my-2"> {{!-- consecutivoOP --}}
                            <label for="consecutivoOP">Orden de Producción</label>
                            <input type="text" name="consecutivoOP" class="form-control" 
                                value="{{ordenProduccion.consecutivo}}" readonly>
                        </div>
                        <div class="form-group py-2 my-2"> {{!-- nombreOP --}}
                            <label for="nombreOP">Nombre Orden de Producción</label>
                            <input type="text" name="nombreOP" class="form-control" 
                                value="{{ordenProduccion.nombreOP}}" readonly>
                        </div>
                        
                        <div class="form-group py-2 my-2"> {{!-- nombreProceso --}}
                            <label for="nombreProceso">Nombre Proceso</label>
                            <input type="text" name="nombreProceso" class="form-control" 
                                value="{{produccion.nombreProceso}}" readonly>
                        </div>
                        <div class="form-group py-2 my-2"> {{!-- cantidad --}}
                            <label for="cantidad">Cantidad</label>
                            <input type="text" name="cantidad" class="form-control" 
                                value="{{produccion.cantidad}}" readonly>
                        </div>
                        {{!-- idOP, idProceso e idProduccion ocultos --}}
                        <input type="hidden" name="idOP" value="{{ordenProduccion.idOP}}">
                        <input type="hidden" name="cantidadOP" value="{{ordenProduccion.cantidadOP}}">                        
                        <input type="hidden" name="idProceso" value="{{produccion.idProceso}}">
                        <input type="hidden" name="idProduccion" value="{{produccion.idProduccion}}">
                        
                        <div class="form-group py-2 my-2 d-flex justify-content-center"> {{!-- boton confirmar --}}
                            <button type="submit" class="btn btn-success">Confirmar</button>
                        </div>
                    </form>
                </div>
            </div>
    </div>
</div>